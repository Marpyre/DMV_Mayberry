<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    <persistence-unit name="bo">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
        <class>smarple1dmv.bo.Person</class>
        <class>smarple1dmv.bo.Photo</class>
        <class>smarple1dmv.bo.PhysicalDetails</class>
        <class>smarple1dmv.bo.Residence</class>
        <class>smarple1dmv.bo.Location</class>
        <class>smarple1dmv.bo.VehicleRegistration</class>
        <properties>
           <!-- defined in src/test/resources/hibernate.properties -->
           <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        </properties>
    </persistence-unit>            
</persistence>